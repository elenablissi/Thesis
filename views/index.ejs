<!-- Reviews Section -->
 <% if (reviews != null) { %>
<section id="reviews" class="bg-gray">
    <div class="container-xxl px-4 px-lg-0">
        <div class="row justify-content-center">
            <div class="col-12 d-flex flex-column justify-content-center text-center">
                <h3 class="pb-5"><span class="text-gray">Preferred by Over</span> 25 Mobile Dealing Clients</h3>
            </div>
        </div>
        <div class="row">
            <div class="carousel-container">
                <div id="multi-item-carousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner mx-auto">
                        <% 
                        const itemsPerSlide = 3;
                        for (let i = 0; i < reviews.length; i += itemsPerSlide) { 
                            const reviewsSlice = reviews.slice(i, i + itemsPerSlide);
                        %>
                        <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                            <div class="row">
                                <% reviewsSlice.forEach(review => { %>
                                <div class="col-10 col-md-4 mx-auto">
                                    <div class="review-card mb-3">
                                        <div class="review-header d-flex align-items-center">
                                            <% if (review.profile_photo_url) { %>
                                                <img src="<%= review.profile_photo_url %>" class="me-3" alt="Profile Photo">
                                            <% } %>
                                            <h5><%= review.author_name %></h5>
                                        </div>
                                        <div class="review-content">
                                            <div class="rating">
                                                <% for (let i = 0; i < review.rating; i++) { %>
                                                    <i class="fa fa-star"></i>
                                                <% } %>
                                                <% for (let i = review.rating; i < 5; i++) { %>
                                                    <i class="fa fa-star-o"></i>
                                                <% } %>
                                            </div>
                                            <div class="review-text">
                                                <p><%= review.text %></p>
                                            </div>
                                            <br class="d-none d-md-block"/>
                                            <small><%= review.time %></small>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                            </div>
                        </div>
                        <% } %>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#multi-item-carousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#multi-item-carousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>            
        </div>
    </div>
</section>
<% } %>

