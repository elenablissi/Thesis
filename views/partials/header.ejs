<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Information -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- CSS Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <!-- For leaflet plugin -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    
    <!-- For geoapify -->
    <link rel="stylesheet" href="https://unpkg.com/@geoapify/leaflet-address-search-plugin@^1/dist/L.Control.GeoapifyAddressSearch.min.css" />
    <script src="https://unpkg.com/@geoapify/leaflet-address-search-plugin@^1/dist/L.Control.GeoapifyAddressSearch.min.js"></script>
    
    <!-- General Styles -->
    <link href="/styles/styles.css" rel="stylesheet">  
    
    <!-- General Functions -->
    <script src="/functions.js"></script>

    <!-- Google Fonts and Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- Favicon -->
    <link rel="icon" href="/Pictures/logo.png" type="image/png">

    <title>Skyline Shine</title>

</head>

    <!-- Announcement Bar -->
    <div class="container-fluid announcement">
        <div class="row fs-6">

            <!-- Open Today Notice -->
            <div class="col-8 col-md-6 d-flex justify-content-center align-items-between text-center mt-1">
                <p>OPEN TODAY FROM 6:30 A.M. <img src="/SVGs/clock.svg" alt="clock" class="clock ms-2 mb-1"></p>
            </div>

            <!-- Contact Phone Number -->
            <div class="col-4 col-md-6 d-flex justify-content-center align-items-center text-center mt-1">
                <a  href="tel:00357481670"><p><img src="/SVGs/telephone.svg" alt="phone" class="phone me-2 mb-1">96481670</p></a>
            </div>
        </div>
    </div>


    <!-- Header and Navbar -->
    <header class="container-fluid bg-blue py-0 py-md-2">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">

          <!-- LOGO IMG -->
          <a href="/" class="link-body-emphasis text-decoration-none"><img id="logo" src="/Pictures/logo.png" alt="logo" class="ms-md-5"></a>
          
          <!-- Burger Button (Mobile) -->
          <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="offcanvas offcanvas-end w-75" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
            <!-- Offcanvas Title (Mobile) -->
            <div class="offcanvas-header border-bottom border-black">
              <h5 class="offcanvas-title ms-2 fs-3" id="offcanvasNavbarLabel">MENU</h5>
              <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>

            <div class="offcanvas-body d-flex flex-column flex-lg-row">
              <!-- Account Buttons/icon (Dynamic Content)-->
              <div class="my-3 mt-lg-1 ms-2" id="auth-section" data-authenticated="<%= isAuthenticated %>">
              <!-- Placeholder content will be replaced by JavaScript -->
              </div>

              <!-- Main Navigation Menu -->
              <ul class="navbar-nav justify-content-start justify-content-lg-center flex-grow-1 pe-3">
                <li><a href="/" class="nav-link px-3 navigationItem <%= (page === 'home') ? 'active' : '' %> ">Home</a></li>
                <li><a href="/services" class="nav-link px-3 navigationItem <%= (page === 'services') ? 'active' : '' %>">Services</a></li>
                <li><a href="/book" class="nav-link px-3 navigationItem <%= (page === 'book') ? 'active' : '' %>">Book</a></li>
                <li><a href="/about" class="nav-link px-3 navigationItem <%= (page === 'about') ? 'active' : '' %>">About</a></li>
                <li><a href="/contact" class="nav-link px-3 navigationItem <%= (page === 'contact') ? 'active' : '' %>">Contact</a></li>
                <li><a href="/openingHours" class="nav-link px-3 navigationItem <%= (page === 'openingHours') ? 'active' : '' %>">Opening Hours</a></li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
    </header>
    
    
    <!-- JavaScript for Dynamic Content -->
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Fetch authentication status from your server 
        fetch('/api/auth/status')
          .then(response => response.json())
          .then(data => {
            const authSection = document.getElementById('auth-section');
            if (data.isAuthenticated) {
              // Update auth section to show account icon and logout
              authSection.innerHTML = `
                <a href="/account">
                  <img class="me-5" src="/SVGs/person-circle.svg" width="30px" alt="account">
                </a>
              `;
            } else {
              // Update auth section to show login and register
              authSection.innerHTML = `
                <a href="/login" class="btn login btn-outline-dark me-2">Login</a>
                <a href="/register" class="btn register btn-dark">Register</a>
              `;
            }
          })
          .catch(error => console.error('Error fetching auth status:', error));
      });
    </script>


    <!-- JavaScript Libraries -->
    <!-- For JQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  
<body class="overflow-x-hidden">  
